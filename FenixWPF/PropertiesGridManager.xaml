<UserControl x:Class="FenixWPF.PropertiesGridManager"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
             xmlns:tools ="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:local="clr-namespace:FenixWPF"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid >
        <WindowsFormsHost>
            <wf:PropertyGrid x:Name="View" 
                             BackColor="White"
                                                         
                             LineColor="#FFF6F6F6"                                                    
                             CategorySplitterColor="#FF41B1E1"
                                                        
                             HelpBackColor="White"
                             HelpBorderColor="#FF41B1E1"                         
                             
                             ViewBorderColor="#FF41B1E1"                          
                             
                             />
        </WindowsFormsHost>

        <!--<tools:PropertyGrid x:Name="View"/>-->
    </Grid>
</UserControl>
